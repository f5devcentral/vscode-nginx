{
	"name": "vscode-nginx",
	"displayName": "F5 NGINX",
	"description": "NGINX Instance Manager integration",
	"version": "0.2.0",
	"license": "Apache-2.0",
	"publisher": "F5DevCentral",
	"repository": {
		"type": "git",
		"url": "https://github.com/f5devcentral/vscode-nginx"
	},
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"snippets": [
			{
				"language": "json",
				"path": "./snippets.json"
			}
		],
		"configuration": {
			"title": "f5-nginx",
			"properties": {
				"f5.nginx.hosts": {
					"type": "array",
					"description": "NGINX Hosts details",
					"items": {
						"type": "object",
						"properties": {
							"device": {
								"type": "string",
								"description": "nginx dude to connect to",
								"pattern": "^[\\w-.]+$"
							},
							"label": {
								"type": "string"
							},
							"port": {
								"type": "number",
								"description": "port to connect to nginx host"
							},
							"auth": {
								"basic": {
									"username": "string",
									"password": "string"
								},
								"cert": {
									"type": "string"
								},
								"token": {
									"type": "object",
									"username": {
										"type": "string"
									},
									"password": {
										"type": "string"
									}
								}
							},
							"system": {
								"type": "object"
							},
							"license": {
								"type": "object"
							}
						}
					},
					"required": [
						"device"
					]
				},
				"f5.nginx.logLevel": {
					"type": "string",
					"enum": [
						"DEBUG",
						"INFO"
					],
					"default": "INFO",
					"scope": "resource",
					"description": "NGINX OUTPUT log level"
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "f5-nginx-view-container",
					"title": "NGINX",
					"icon": "images/NGINX-product-icon-white.svg"
				}
			]
		},
		"views": {
			"f5-nginx-view-container": [
				{
					"id": "hostsView",
					"name": "HOSTS"
				},
				{
					"id": "inventoryView",
					"name": "INVENTORY",
					"when": "nim.connected"
				},
				{
					"id": "scanView",
					"name": "SCAN",
					"when": "nim.connected"
				}
			]
		},
		"commands": [
			{
				"command": "nginx.refreshHostsTree",
				"title": "Refresh Devices",
				"category": "NGINX",
				"icon": "$(refresh)"
			},
			{
				"command": "nginx.addHost",
				"title": "Hosts Config",
				"category": "NGINX",
				"icon": "$(gear)"
			},
			{
				"command": "nginx.editHost",
				"title": "Edit Host",
				"category": "NGINX",
				"icon": "$(edit)"
			},
			{
				"command": "nginx.removeHost",
				"title": "Remove Host",
				"category": "NGINX",
				"icon": "$(trash)"
			},
			{
				"command": "nginx.connect",
				"title": "Connect to NIM",
				"category": "NGINX"
			},
			{
				"command": "nginx.disConnect",
				"title": "Dis-Connect",
				"category": "NGINX",
				"icon": "$(debug-disconnect)"
			},
			{
				"command": "nginx.refreshInventory",
				"title": "Refresh Inventory",
				"category": "NGINX",
				"icon": "$(refresh)"
			},
			{
				"command": "nginx.analyzeConfigs",
				"title": "Analyze Configs",
				"category": "NGINX",
				"icon": "$(star)"
			},
			{
				"command": "nginx.publishConfigs",
				"title": "Publish Configs",
				"category": "NGINX",
				"icon": "$(cloud-upload)"
			},
			{
				"command": "nginx.refreshScan",
				"title": "Refresh Scan",
				"category": "NGINX",
				"icon": "$(refresh)"
			},
			{
				"command": "nim.scanStart",
				"title": "Start Scan",
				"category": "NGINX"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "nim.scanStart",
					"when": "nim.connected"
				}
			],
			"view/title": [
				{
					"command": "nginx.addHost",
					"when": "view == hostsView",
					"group": "navigation"
				},
				{
					"command": "nginx.refreshHostsTree",
					"when": "view == hostsView",
					"group": "navigation"
				},
				{
					"command": "nginx.refreshInventory",
					"when": "view == inventoryView",
					"group": "navigation"
				},
				{
					"command": "nginx.refreshScan",
					"when": "view == scanView",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "nginx.editHost",
					"when": "view == hostsView && viewItem == host",
					"group": "inline"
				},
				{
					"command": "nginx.disConnect",
					"when": "view == hostsView && viewItem == host",
					"group": "inline"
				},
				{
					"command": "nginx.removeHost",
					"when": "view == hostsView && viewItem == host",
					"group": "inline"
				},
				{
					"command": "nginx.analyzeConfigs",
					"when": "view == inventoryView && viewItem == instance",
					"group": "inline"
				},
				{
					"command": "nginx.publishConfigs",
					"when": "view == inventoryView && viewItem == instance",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^14.14.37",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.21.0",
		"@typescript-eslint/parser": "^4.21.0",
		"eslint": "^7.24.0",
		"typescript": "^4.2.4"
	},
	"dependencies": {
		"@szmarczak/http-timer": "^4.0.5",
		"@types/js-yaml": "^4.0.0",
		"axios": "^0.21.1",
		"f5-conx-core": "github:dumpysquare/f5-conx-core",
		"js-yaml": "^4.0.0",
		"keytar": "^7.6.0"
	}
}
